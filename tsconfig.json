{
    "exclude": [
      "dist",
      "node_modules"
  ],
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "module": "esnext",
      "outDir": "dist",
      "jsx": "react",
      "moduleResolution": "node",
      "types": [
          "react",
          "react-dom",
          "jest",
          "puppeteer",
          "jest-environment-puppeteer",
          "expect-puppeteer"
      ]
  },
  "include": [
      "src/**/*"
  ]
}